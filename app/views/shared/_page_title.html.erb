<%
  categories = link_to t('navigation.styles'), app_route(table_app_styles_path(current_app))
  ingredients = link_to t('navigation.ingredients'), app_route(table_app_ingredients_path(@current_app))
  allergens = link_to t('navigation.allergens'), app_route(table_app_allergens_path(current_app))
%>
<h1 align="center" class="title-heading">
  <% if title != t('recipes.show_all_recipes') %>
    <% title = title.gsub!("-", ".") if title.include?('-') %>
    <% title = title.titleize %>
    <% title = title.gsub!(".", "-") if title.include?('.') %>
  <% end %>
  <%= title %>
  <%= categories + ', ' + ingredients + ', or ' + allergens if title == t('recipes.show_all_recipes') %>
</h1>
<hr class="hide-on-print">
<div class="row">
  <div style="margin: 0 auto; display:none" class='is-draft'><span class="badge badge-warning" style="font-size: 150%"><%= t('common.draft') %></span></div>
</div>
