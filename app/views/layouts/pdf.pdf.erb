<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= stylesheet_link_tag wicked_pdf_asset_base64("application") %>
    <style>
      body {
        line-height: 1.5;
        padding: 1.5cm 3.4cm 0 3cm;
        font-size: 12pt;
        font-family: Helvetica, Arial, Sans-Serif;
      }
      table {
        font-family: Helvetica, sans-serif;
        width: 100%;
        margin: 0;
        padding: 0;
      }
      td, th {
        font-size: 1.2em;
        padding: 5px 0 5px 0;
        word-break: break-all;
      }
      .order-item {
        text-align: left;
        padding-left: 20px;
        font-size: 1.2em;
        max-width: 140px;
      }
      .order-field {
        text-align: center;
        width: 80%;
        font-size: 1.1rem;
      }
    </style>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
