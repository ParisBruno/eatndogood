<%= render 'shared/errors', obj: @user %>

<div class="row">
  
    <%= form_for(@user, url: !@user.id.nil? ? chef_path(@user) : chefs_path, :html => {class: "form-horizontal", role: "form",  multipart: true }) do |f| %>
    <div class="col-md-offset-4 login-sec margin-sec full-width-sec edit-chef">
      <div class="col-md-5 well box-content">
      
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :first_name, "First Name" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first your first name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :last_name, "Last Name" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last your name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
          </div>
        </div>
        
      <%= f.fields_for :chef_info, @user.chef_info do |c| %>
        <div class="form-group">
          <div class="control-label col-md-2"><%= c.label :chef_avatar %></div>
          <div class="col-md-2">
            <%= image_tag( (!@user.nil? && !@user.chef_info.nil? && @user.chef_info.chef_avatar.url.present?) ? @user.chef_info.chef_avatar.url : 'cooking-new.png', class: 'img-responsive', alt: t('common.no_image')) %>
          </div>
          <div class="control-label col-md-8">
            <%= c.file_field :chef_avatar, accept: 'image/jpeg,image/gif,image/png' %>
          </div>
        </div>
      </div>
      <div class="col-md-5 well box-content">
        
        <div class="form-group">
          <div class="col-md-12" style="font-weight:bold;">
             <%= c.label :my_bio, "Add summary bio" %>
          </div>
          <div class="col-md-12">
            
            <%= c.cktext_area :my_bio, class: "form-control", placeholder: "" %>
          </div>
        </div>

        <% end %>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit(@user.new_record? ? "Create my account" : "Update my account", 
                                                      class: "btn btn-primary btn-lg btn-xlarge", style: "float:right;") %>
          </div>
        </div>
      </div>
      
    </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  
</div>

