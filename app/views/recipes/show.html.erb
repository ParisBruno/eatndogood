<style>
.fa.fa-instagram {
  color: transparent;
  background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
  background: -webkit-radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
  background-clip: text;
  -webkit-background-clip: text;
  margin: 10px;
}
.fa-pinterest{
 color: #cb2027;
 margin: 10px;
}
.fa-twitter{
background: #4099FF;
color: #FFFFFF;
padding: 0.05em 0.07em;
border-radius: 10px;
margin: 10px;
}
.fa-facebook {
  color: white;
  background-color: RoyalBlue;
  padding: 0.1em 0.25em 0em 0.25em;
  border-radius: 5px;
  margin: 10px;
}
</style>
  <div class="margin-sec top-space" style="margin-top: 50px;">
     <div class="col-md-12 margin-sec top-space recipe-detail">
     <div class="row">
      <div class="col-md-8 col-sm-12 col-xs-12 detail-sec">
      <div class="box-inner-sec well box-content">
      <div class="detail-list">
      <% if (current_app_user and (@recipe.chef.id == current_app_user.id) || current_app_user.admin?) %>
        <%= link_to t('recipes.delete_recipe'), [current_app, @recipe], class: "btn btn-danger pull-right  btn-lg", style:"margin-right:100px;",  method: :delete, data: { confirm: t('common.confirm') } %>
      <% end %>

      
      <% if (current_app_user and (@recipe.chef.id == current_app_user.id)|| current_app_user.admin? ) %>
        <%= link_to t('recipes.edit_recipe'), edit_app_recipe_path(current_app, @recipe), class: "btn btn-success pull-right  btn-lg" %>
      <% end %>
 

      <center>
        <h2>
          <%= link_to @recipe.name, app_recipe_path(current_app, @recipe) %>
        </h2>
      </center>

      <h2>
        <%= @recipe.summary.html_safe %>
      </h2>

      <div class="well-sec u-content">
        <p>
          <strong><%= t 'recipes.tips_ingredients_preparation' %></strong>
        </p>
        <p style="font-family: Garamond; font-size:18px;">
          <%= simple_format(@recipe.description) %>
        </p>
        <div class="chef_info center">
          <h2 style="text-align:right">
            <a href="/chefs/<%= @recipe.chef.id%>" class="btn btn-success btn-lg">
              <%= t('recipes.crafted_by') %> <%= @recipe.chef.user.full_name.capitalize %>
            </a>
          </h2>
        </div>
      </div>
      </div>
      </div>
      </div>
      <div class="col-md-4 col-sm-12 col-xs-12 thumb-sec">
      <% if @recipe.food_image.attached? %>
        <div class="image-box-shadow" style="margin-bottom: 10px;">
          <%=image_tag(@recipe.food_image, class:'img', alt: t('common.no_image')) %>
        </div>
      <% end %>
      <% if @recipe.drink_image.attached? %>
        <div class="image-box-shadow" style="margin-bottom: 10px;">
          <%=image_tag(@recipe.drink_image, class:'img', alt: t('common.no_image')) %>
        </div>
      <% end %>
      </div>
      

      </div>
      </div>
  </div>


<br>

<% if current_app_user.present? && session[:user_role] != 'super_admin' %>
  <div class="recipes-q">
 
    <center>
          <% if current_app_user.id != @recipe.chef.id %>
            <h3>
              <a href="<%= new_app_question_path(@recipe, user_id: current_app_user.id, email: @recipe.chef.user.email, recipe_id: @recipe.id) %>">
                <%= t('recipes.question_about_this_recipe') %>
              </a>
            </h3>
            <br>
            <br>
            <% if @recipe.is_reservation_enable %>
              <h3>
                <a href="<%= new_app_reservation_path(current_app, @recipe, user_id: current_app_user.id, email: @recipe.chef.admin_user.email, recipe_id: @recipe.id, type: "reservation") %>" class="btn btn-success">
                  <%= t('reservations.make_reservation')%>
                </a>
              </h3>
              <% end %>
              <br/>
              <br/>
              <% if @recipe.is_ask_catering_enable %>
                <h3>
                  <a href="<%= new_app_reservation_path(current_app, @recipe, user_id: current_app_user.id, email: @recipe.chef.admin_user.email, recipe_id: @recipe.id, type: "catering") %>" class="btn btn-success">
                    <%= t('reservations.make_catering') %>
                  </a>
                </h3>
                <% end %>
                <br/>
                <br/>
          <% end %>
          <div>
            <h2 style="color: #007bff;">Share with friends & family</h2>
            <%= link_to "<i class='fa fa-facebook fa-4x'> </i>".html_safe, "https://www.facebook.com/sharer/sharer.php?u=#{app_recipe_url(@recipe)}" %> 
            <%= link_to "<i class='fa fa-instagram fa-4x'> </i>".html_safe, "https://www.instagram.com/?url=#{app_recipe_url(@recipe)}" %>
            <%= link_to "<i class='fa fa-linkedin fa-4x'> </i>".html_safe, "https://www.linkedin.com/shareArticle?mini=true&url=#{app_recipe_url(@recipe)}&title=#{@recipe.name}", rel: noopener, target: "_blank" %>
            <%= link_to "<i class='fa fa-twitter fa-4x'> </i>".html_safe, "https://twitter.com/intent/tweet?text=#{@recipe.name}&url=#{app_recipe_url(@recipe)}" %>
            <%= link_to "<i class='fa fa-pinterest fa-4x'> </i>".html_safe, "http://www.pinterest.com/pin/create/button/?url=#{app_recipe_url(@recipe)}&description=#{@recipe.name}" %>
            <%= link_to "<i class='fa fa-envelope fa-4x'> </i>".html_safe, "mailto:?to=&subject=#{@recipe.name}&body=#{app_recipe_url(@recipe)}" %>
          </div>
          <%= link_to like_app_recipe_path(current_app, @recipe, like: true), method: :post, :style => "font-size:30px; color: #337ab7 !important" do %>
            <i class="glyphicon glyphicon-thumbs-up" ></i>
            &nbsp;
            <%= @recipe.thumbs_up_total %>
          <% end %>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to like_app_recipe_path(current_app, @recipe, like: false), method: :post,:style => "font-size:30px; color: #337ab7 !important" do %>
              <i class="glyphicon glyphicon-thumbs-down"></i>
              &nbsp;
              <%= @recipe.thumbs_down_total %>
          <% end %>
     
    </center>
  </div>
<% end %>

<center>
  <h5>
    <% if session[:user_role] == 'super_admin' %>
      <%= link_to t('recipes.return_to_recipes_listing'), allrecipe_path, class: 'btn btn-primary btn-lg', style: "color:white !important" %>
    <% else %>
      <%= link_to t('recipes.return_to_recipes_listing'), app_recipes_path(current_app), class: 'btn btn-primary btn-lg', style: "color:white !important" %>
    <% end %>
  </h5>
</center>