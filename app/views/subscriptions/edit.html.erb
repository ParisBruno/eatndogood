<div class="row mt-lg-0 mt-5">
  <%= form_for(current_app, url: app_update_path(current_app), method: :post) do |f| %>
    <div class="col-12 margin-sec full-width-sec text-center">
      <div class="col-md-5 col-lg-4 well box-content mb-3">
        <div class ="row">
          <div class="col-12">
            <h3 class="pb-3 text-center border-bottom font-weight-bold">
              <%= t('subscription.update_subscription') %>
            </h3>
          </div>
          <div class="col-12 mb-3">
            <% guest_limit = @app.plan.guests_limit %>
            <h3 class="px-3 text-center mt-3">
              <%= t('subscription.current_guest_limit', guest_limit: "#{guest_limit}") %>
            </h3>
          </div>
          <% if guest_limit == 250 %>
            <div class="col-6 mt-3 d-flex">
              <%= radio_button_tag :guest, '500', false, class: 'my-0' %>
              <h3 class="pl-3 my-0">
                <%= t('subscription.update_slot', slot: 250) %>
              </h3>
            </div>
            <div class="col-6 mt-3 text-right">
              <h3 class="my-0"><%= get_plan_price(500) %></h3>
            </div>
          <% end %>
          <div class="col-6 mt-3 d-flex">
            <%= radio_button_tag :guest, '1000', false, class: 'my-0' %>
            <h3 class="pl-3 my-0">
              <%= t('subscription.update_slot', slot: 500) %>
            </h3>
          </div>
          <div class="col-6 mt-3 text-right">
            <h3 class="my-0"><%= get_plan_price(1000) %></h3>
          </div>
          <div class="form-group col-12 mt-4">
            <%= f.submit t('common.upgrade'), class: 'btn btn-lg btn-success px-3' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>