<style>
  .subscription-slots{
    width: max-content;
    padding: 15px;
    border: 1px solid #9999994f;
    box-shadow: 0 2px 10px 0 rgb(0 0 0 / 20%);
    -webkit-box-shadow: 0 2px 10px 0 rgb(0 0 0 / 20%);
  }
  @media (max-width: 576px) {
    .btn-center {
      text-align: center;
    }
  }
  @media (max-width: 600px) {
    .subscription-edit {
      margin-top: 70px !important;
    }
  }
</style>
<div class="subscription-edit">
  <%= form_for(current_app, url: app_route(app_update_path(current_app)), method: :post) do |f| %>
    <div class="row justify-content-center pt-5 mt-5">
      <div class="col-8 col-sm-6 col-md-5 col-lg-4 subscription-slots btn-center">
        <div class ="row">
          <div class="col-12 mt-2">
            <h3 class="pb-3 text-center border-bottom font-weight-bold">
              <%= t('subscription.update_subscription') %>
            </h3>
          </div>
          <div class="col-12 mb-3">
            <% guest_limit = current_app.plan.guests_limit %>
            <h3 class="px-3 text-center mt-3">
              <%= t('subscription.current_guest_limit', guest_limit: "#{guest_limit}") %>
            </h3>
          </div>
          <% if guest_limit == 250 %>
            <div class="col-12 col-sm-7 col-xl-6 mt-3 d-flex justify-content-center">
              <%= radio_button_tag :guest, '500', false, class: 'my-auto' %>
              <h3 class="pl-3 my-auto">
                <%= t('subscription.update_slot', slot: 250) %>
              </h3>
            </div>
            <div class="col-12 col-sm-5 col-xl-6 mt-3 text-center">
              <h3 class="my-auto"><%= get_plan_price(500) %></h3>
            </div>
          <% end %>
          <div class="col-12 col-sm-7 mt-3 col-xl-6 d-flex justify-content-center">
            <%= radio_button_tag :guest, '1000', false, class: 'my-auto' %>
            <h3 class="pl-3 my-auto">
              <%= t('subscription.update_slot', slot: 500) %>
            </h3>
          </div>
          <div class="col-12 col-sm-5 mt-3 col-xl-6 text-center">
            <h3 class="my-0"><%= get_plan_price(1000) %></h3>
          </div>
          <div class="form-group col-12 mt-4 pl-sm-5">
            <%= f.submit t('common.upgrade'), class: 'btn btn-lg btn-success px-3' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

