<style>
  .order-table {
    margin-left: 6%;
    margin-right: 3%;
    padding-bottom: 5%;
    max-width: 1100px;
  }
  table {
    font-family: Helvetica, sans-serif;
    width: 100%;
    margin: 0;
    padding: 0;
  }
  td, th {
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dadada;
    font-size: 1.3em;
    padding: 5px 0 5px 0;
    word-break: break-all;
  }
  thead {
    font-weight: bold;
    font-size: 1.2em;
  }
  .order-id {
    font-weight: 600;
    font-size: 1.5em;
    max-width: 60px;
    min-width: 40px;
  }
  .order-amount {
    min-width: 60px;
  }
  .order-data {
    margin-bottom: 0 !important;
    min-width: 150px;
  }
</style>

<%= render 'shared/page_title', title: t('orders.all') %>

<div class="order-table">
  <%= link_to t('orders.new'), app_new_staff_order_path(current_app), class: 'btn btn-lg btn-primary mb-3' %>
  <%= render 'search_bar' %>
  <div id="orderTable">
    <%= render 'table', orders: @orders %>
  </div>
</div>

<script type="text/javascript">
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })

  $("#search_start_date").change(function(){
    var startDate = $('#search_start_date').val();
    var endDate = $('#search_end_date').val();
    if (startDate == '' && endDate == '') {
      $(".searchbutton").removeClass("disabled");
      $("#startDateError").empty();
      $("#endDateError").empty();
    } else if (startDate == '') {
      $(".searchbutton").addClass("disabled");
      $("#startDateError").html('<span class="text-warning">Please Fill Created At From Date</span>');
    } else if (endDate == '') {
      $(".searchbutton").addClass("disabled");
      $("#endDateError").html('<span class="text-warning">Please Fill Created At To Date</span>');
    } else if (endDate != '' && startDate > endDate ) {
      $("#startDateError").html('<span class="text-danger">Should be less than created at to</span>');
      $(".searchbutton").addClass("disabled");
      $("#endDateError").empty();
    } else {
      $(".searchbutton").removeClass("disabled");
      $("#startDateError").empty();
      $("#endDateError").empty();
    }
  });

  $("#search_end_date").change(function(){
    var startDate = $('#search_start_date').val();
    var endDate = $('#search_end_date').val();
    if (startDate == '' && endDate == '') {
      $(".searchbutton").removeClass("disabled");
      $("#startDateError").empty();
      $("#endDateError").empty();
    } else if (endDate == '') {
      $(".searchbutton").addClass("disabled");
      $("#endDateError").html('<span class="text-warning">Please Fill Created At To Date</span>');
    } else if (startDate == '') {
      $(".searchbutton").addClass("disabled");
      $("#startDateError").html('<span class="text-warning">Please Fill Created At From Date</span>');
    } else if (startDate != '' && startDate > endDate) {
      $("#endDateError").html('<span class="text-danger">Should be greater than created at from</span>');
      $(".searchbutton").addClass("disabled")
      $("#startDateError").empty();
    } else {
      $(".searchbutton").removeClass("disabled");
      $("#endDateError").empty();
      $("#startDateError").empty();
    }
  })
</script>
