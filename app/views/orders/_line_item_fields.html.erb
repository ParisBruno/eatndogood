<div class="row field mb-2 nested-fields">
  <div class="col-5 new-order-item">
      <% if f.object.recipe || f.object.gift_card %>
        <%= f.label :name, f.object.gift_card ? f.object&.gift_card&.name : f.object&.recipe&.name %>
      <% else %>
        <%= f.select :recipe_id, @recipes.collect  {|p| [ p.name, p.id ] }, {}, class: 'order-field' %>
      <% end %>
  </div>
  <div class="col-5"><%= f.number_field :quantity, class: 'order-field', step: 1, min: 1, onchange: 'changeQuantity();' %></div>
  <div class="col-1">
    <%= link_to_remove_association "X", f, { class: 'btn btn-lg btn-outline-danger', id: 'remove-new-recipe', onmousedown: 'removeNewRecipe();' } %>
  </div>
</div>