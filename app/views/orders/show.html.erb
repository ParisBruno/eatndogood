<style type="text/css">
  @media (min-width: 280px) and (max-width: 540px) {
    .recipe-detail {
      margin-top: 85px !important;
    }
  }
</style>
<%#= render 'shared/page_title', title: "Edit Order" %>

<div class="margin-sec">
  <div class="col-md-12 recipe-detail mt-5">
    <div class="row">
      <div class="col-md-offset-3 col-lg-6 col-sm-12 col-xs-12">
        <div class="box-inner-sec well box-content">
          <% if @order.is_home_delivery? %>
            <div class="col-12 p-0 text-right">
              <span class="font-weight-bold delivery-sign ml-4"><%= 'D'%></span>
            </div>
          <% end %>
          <div id="staff-order">
            <%= render 'form', order: @order %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>