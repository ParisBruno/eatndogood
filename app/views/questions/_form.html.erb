<div class="col-md-12">

    <%= form_with(model: [current_app, @question], url: (@question.persisted? ? app_route(app_question_path(current_app, @question)) : app_route(app_questions_path(current_app))), html: {class: "form-horizontal", role: "form"}, remote: remote) do |f| %>
      <%= f.hidden_field :email, value:  (@question.email.present?) ? @question.email: @email %>
      <%= f.hidden_field :user_id, value: (@question.user_id.present?) ? @question.user_id : @user_id %>
      <%= f.hidden_field :recipe_id, value: (@question.recipe_id.present?) ? @question.recipe_id : @recipe_id %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :subject, t('forms.subject') %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :subject, class: "form-control", placeholder: "Subject", require: true %>
        </div>
      </div>

      

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :body, t('forms.body') %>
        </div>
        <div class="col-md-8">
          <%= f.text_area(:body, size: '50x10', class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit t('forms.submit'), class: "btn btn-success btn-lg" %>
        </div>
      </div>

      
    <% end %>
</div>