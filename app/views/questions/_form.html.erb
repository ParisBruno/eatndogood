<div class="col-md-12">

    <%= form_for @question, :html => {class: "form-horizontal", multipart: true, role: "form"} do |f| %>
      <%= f.hidden_field :user_id, value: (@question.user_id.present?) ? @question.user_id : @user_id   %>
      <%= f.hidden_field :recipe_id, value: (@question.recipe_id.present?) ? @question.recipe_id : @recipe_id %>
      <%= f.hidden_field :make_reservation, value: @make_reservation %>
      <%= f.hidden_field :question_type, value: @make_reservation ? "reservation" : "question" %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :full_name, t('forms.full_name') %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :full_name, class: "form-control", placeholder: "Full-name", require: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :phone_number, t('forms.phone_number') %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number", require: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email, t('forms.email') %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Email", require: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :number_people, t('forms.number_people') %>
        </div>
        <div class="col-md-8">
          <%= f.number_field :number_people, class: "form-control", placeholder: "Number of people in party" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :ci_date, t('forms.date') %>
        </div>
        <div class="col-md-8">
           <%= f.date_field :ci_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :ci_time, t('forms.time') %>
        </div>
        <div class="col-md-8">
           <%= f.time_select :ci_time, :ignore_date => true, class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :subject, t('forms.subject') %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :subject, class: "form-control", placeholder: "Subject", require: true %>
        </div>
      </div>

      

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :body, t('forms.body') %>
        </div>
        <div class="col-md-8">
          <%= f.text_area(:body, size: '50x10', class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit t('forms.submit'), class: "btn btn-success btn-lg" %>
        </div>
      </div>

      
    <% end %>
</div>