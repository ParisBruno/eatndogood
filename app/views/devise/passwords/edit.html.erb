
<style>
  .margin-sec .box-content {
    padding: 20px !important;
  }
  .wrapper {
      margin-top: 50px;
      width: 100%;
      margin-bottom: 0px;
  }
  .box-content input.btn {
      margin-top: 0px!important; 
  }
  .form-control{
    font-size: 18px !important;
  }
  .fa-eye{
    padding-top: 7px !important;
  }
  .fa-eye-slash{
    padding-top: 7px !important;
  }
  .btn-success{
    border-radius: 8px;
  }
  .box-content{
    float: none !important;
  }
  .heading{
    margin-top: 10px;
  }

  @media screen and (min-width: 280px) and (max-width: 540px) {
    .heading{
      margin-top: 85px
    }
  }
  @media screen and (min-width: 280px) and (max-width: 912px) {
    .heading{
      margin-top: 85px
    }
  }
  #error_explanation ul{
    margin-left: 15px;
  }
