<style type="text/css">
  .btn-success{
    border-radius: 8px;
  }
  #app_user_email{
    font-size: 16px !important;
  }
  #error_explanation ul{
    margin-left: 15px;
  }
</style>
<div class="login-header">
  <p>
    <h1>
      <%= t('password.forgot_password') %>
    </h1>
    <hr>
  </p>
</div>

<div class="row">
  <div class="well col-md-5 col-md-offset-4 login-sec">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :app_id, value: current_app.id %>
      <div class="field">
        <%= f.label :email, t('forms.email') %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions">
        <%= f.submit t('forms.submit'), class: 'btn btn-success' %>
      </div>
    <% end %>
    <%= link_to t('password.back_to_login'), new_app_user_session_path(current_app) %>
  </div>
</div>
