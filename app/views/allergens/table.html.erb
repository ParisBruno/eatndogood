<style>
  .col-xs-12 {
    padding-left: 5px;
    padding-right: 5px;
  }
  .col-xs-8 {
    padding-left: 5px;
    padding-right: 5px;
  }
  .col-xs-6 {
    width: 50%;
  }
  img {
    width: 100%;
  }
  .col-xs-8 {
    width: 100%;
    height: auto;
  }
  .text-wrap{
    word-wrap: break-word;
    text-align: center!important;
    margin-bottom: 0px !important;
  }
  .col-md-8 {
    width: 100%;
    height: auto;
  }
  .category-title {
    font-weight: 400;
    color: #808080;
  }
  .category-style {
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 10px;
    max-width: 90%;
  }
  .page-title .btn{
    border-radius: 8px;
  }
  @media screen and (max-width: 1024px) and (min-width: 768px) {
    .category-style {
      width: 100% !important;
      height: 180px !important;
    }
    .page-title {
      margin-top: 3%;
    }
    .allergen-listing .box-content{
      min-height: 250px !important;
    }
  }
  @media screen and (min-width: 1024px) {
    .category-style {
      width: 100% !important;
      height: 260px !important;
    }
  }
  @media screen and (max-width: 600px) {
    .page-title {
      margin-top: <%= app_user_signed_in? ? '80px' : '10px' %>;
    }
  }
  @media screen and (min-width: 280px) and (max-width: 912px) {
    .text-wrap {
      font-size: 19px !important;
    }
  }
</style>

<div class="page-title">
  <p><%= link_to t('forms.new_allergen'), new_app_allergen_path(@current_app), class: "btn btn-success float-right top-heading", style: "margin-right: 20px; margin-left: -10%;" %></p>
  <%= render 'shared/page_title', title: t('common.allergens') %>
</div>

<div class="allergen-sortable row mx-3">
  <% @allergens.each_with_sortable_id do |allergen, sortable_id| %>
    <div class="col-lg-4 col-md-6 col-xs-6 mb-1 p-2 allergen-listing" id="<%= sortable_id %>" data-allergen-id="<%= allergen.id %>">
      <div class="margin-sec top-recepi top-space h-100">
        <div class="box-inner-sec well box-content h-100">
          <div class="col-lg-1 col-md-2 col-xs-2">
          </div>
          <% if allergen.image.attached? %>
            <%= link_to app_allergen_path(@current_app, allergen) do %>
              <div class="col-lg-10 col-md-8 col-xs-8">
                <% image = allergen.sized(:image, :thumb) %>
                <%=image_tag(image, class:'category-style', size: "140x100", alt: t('common.no_image')) if image.present? %>
              </div>
            <% end %>
          <% end %>
          <div class="col-lg-1 col-md-2 col-xs-2">
          </div>
          <div class="col-lg-12 col-md-12 col-xs-12">
            <h2 class="text-wrap">
              <%= link_to allergen.name.capitalize, app_allergen_path(@current_app, allergen), class: 'category-title' %>
            </h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(".allergen-sortable").on( "sortupdate", function( event, ui ) {
    var elements = $('.allergen-sortable .ui-sortable-handle');
    var allergens = [];
    $.each(elements, function( index, value ) {
      var allergen_id = $(value).data("allergen-id");
      var allergen = { id: allergen_id }
      allergens.push(allergen);
    });
    $.ajax({
      method: "POST",
      url: "/" + <%= @current_app.id %> + "/allergens/update_positions",
      data: { elements: allergens },
      success: function (response) {
      },
    })
  });
</script>
