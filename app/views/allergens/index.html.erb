<style>
  @media screen and (max-width: 600px) {
    .category-page-title {
      margin-top: <%= app_user_signed_in? ? '70px' : '10px' %>;
    }
  }
</style>

<div class="category-page-title">
  <%= render 'shared/page_title', title: "Allergens" %>
</div>

<div align="center">
  <%#= will_paginate %>
  <% @allergens.each do |allergen| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to allergen.name, app_allergen_path(current_app, allergen) %></li>
          <li><%= pluralize(allergen.recipes.count, "recipe") if allergen.recipes %></li>
          <% if app_user_signed_in? && current_app_user.admin? %>
            <li><%= link_to "Edit", edit_app_allergen_path(current_app, allergen) %></li>
            <li><%= link_to "Delete", [current_app, allergen], method: :delete, data: { confirm: 'Are you sure?' } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%#= will_paginate %>
</div>