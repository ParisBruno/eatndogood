<style>
  @media screen and (max-width: 600px) {
    .category-page-title {
      margin-top: <%= app_user_signed_in? ? '70px' : '10px' %>;
    }
  }
</style>

<div class="category-page-title">
  <%= render 'shared/page_title', title: "Styles" %>
</div>

<div align="center">
  <%#= will_paginate %>
  <% @styles.each do |style| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to style.name, app_style_path(current_app, style) %></li>
          <% recipes_count = current_app_user&.admin? ? style.recipes.count : style.recipes.where(is_draft: false).count %>
          <li><%= pluralize(recipes_count, "recipe") if style.recipes %></li>
          <li><%= link_to "Edit", edit_app_style_path(current_app, style) %></li>
          <li><%= link_to "Delete", [current_app, style], method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%#= will_paginate %>
</div>